{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2021"],
    "outDir": "./dist",
    "rootDir": "./server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "ts-node": {
    "transpileOnly": false,
    "files": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist"]
}

